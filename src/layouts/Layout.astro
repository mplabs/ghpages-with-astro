---
import { Image } from 'astro:assets'
import BaseHead from '@components/BaseHead.astro'
import config from '@config';
import '@styles/global.css'
import avatarImage from '../assets/avatar.png'

type Props = {
    pageTitle: string
}

const { pageTitle } = Astro.props
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead pageTitle={pageTitle} />
    </head>
    <body class="font-serif font-normal leading-normal text-gray-800 font-sm md:font-base text-pretty">
        <div id="site-wrapper" class="flex flex-row min-h-screen">
            <!-- Skip to main conetnt -->
            <a href="#main-content" class="underline absolute left-[50%] h-8 p-2 -translate-y-full duration-300 ease-in-out focus:translate-y-0"> Jump to main content </a>

            <header>
                <h1>
                    <Image src={avatarImage} alt={config.title} />
                    <span class="block">{config.title}</span>
                </h1>
            </header>
            <slot />
        </div>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
